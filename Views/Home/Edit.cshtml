@model Movie

@{
    ViewData["Title"] = "Edit Movie";
}

<div class="page">
    <div class="card-panel">
        <div class="page-header">
            <h1 class="display-4">Edit Movie</h1>
        </div>

        <form class="movie-form" method="post" asp-action="Edit">
            <input type="hidden" asp-for="MovieId" />
            <div asp-validation-summary="All" class="text-danger"></div>

            <label asp-for="CategoryId">Category</label>
            <select asp-for="CategoryId" asp-items="ViewBag.CategoryList">
                <option value="">-- Select Category --</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
            <br />

            <label asp-for="Title">Title</label>
            <input asp-for="Title" />
            <span asp-validation-for="Title" class="text-danger"></span>
            <br />

            <label asp-for="Year">Year</label>
            <input asp-for="Year" />
            <span asp-validation-for="Year" class="text-danger"></span>
            <br />

            <label asp-for="Director">Director</label>
            <input asp-for="Director" />
            <span asp-validation-for="Director" class="text-danger"></span>
            <br />

            <label asp-for="Rating">Rating</label>
            <select asp-for="Rating">
                <option value="">-- Select Rating --</option>
                <option value="G">G</option>
                <option value="PG">PG</option>
                <option value="PG-13">PG-13</option>
                <option value="R">R</option>
            </select>
            <span asp-validation-for="Rating" class="text-danger"></span>
            <br />

            <label asp-for="Edited">Edited?</label>
            <select asp-for="Edited">
                <option value="true">Yes</option>
                <option value="false">No</option>
            </select>
            <span asp-validation-for="Edited" class="text-danger"></span>
            <br />

            <label asp-for="CopiedToPlex">Copied To Plex?</label>
            <select asp-for="CopiedToPlex">
                <option value="true">Yes</option>
                <option value="false">No</option>
            </select>
            <span asp-validation-for="CopiedToPlex" class="text-danger"></span>
            <br />

            <label asp-for="LentTo">Lent To</label>
            <input asp-for="LentTo" />
            <span asp-validation-for="LentTo" class="text-danger"></span>
            <br />

            <label asp-for="Notes">Notes</label>
            <input asp-for="Notes" maxlength="25" />
            <span asp-validation-for="Notes" class="text-danger"></span>
            <br />

            <button class="btn btn-primary" type="submit">Save Changes</button>
            <a asp-controller="Home" asp-action="MovieList" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
